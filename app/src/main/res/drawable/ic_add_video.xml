<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 青色背景 -->
    <item android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#25F4EE" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- 红色背景 -->
    <item android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FE2C55" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- 白色中间层 -->
    <item android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!-- 加号 -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#1F1F1F" />
            <size android:width="16dp" android:height="2dp" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#1F1F1F" />
            <size android:width="2dp" android:height="16dp" />
        </shape>
    </item>
</layer-list>
