<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 视频播放器ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:src="@drawable/ic_back_white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="返回" />

    <!-- 双击点赞动画 -->
    <ImageView
        android:id="@+id/iv_like_animation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_like_large"
        android:visibility="gone" />

    <!-- 评论遮罩层 -->
    <View
        android:id="@+id/view_comment_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- 评论面板 -->
    <LinearLayout
        android:id="@+id/comment_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:orientation="vertical"
        android:background="@drawable/bg_comment_sheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:behavior_halfExpandedRatio="0.6">

        <!-- 评论头部 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="128条评论" />

            <ImageView
                android:id="@+id/iv_close_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider" />

        <!-- 评论列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="200dp"
            android:maxHeight="400dp"
            android:clipToPadding="false"
            android:paddingVertical="8dp"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_comment" />

        <!-- 评论输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@color/background">

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/bg_comment_input"
                android:paddingHorizontal="12dp"
                android:hint="留下你的精彩评论吧"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="发送"
                android:textColor="@color/primary"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
