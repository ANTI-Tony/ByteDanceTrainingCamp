<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DouyinClone" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.DouyinClone.Video" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <!-- 全屏对话框样式 -->
    <style name="Theme.DouyinClone.Dialog" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    
    <!-- 对话框动画 -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    
    <!-- 自定义TabLayout样式 -->
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>
    
    <style name="CustomTabTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
